@page "/contactless/servicerequest"
@model ServiceRequestModel
@{
    ViewData["Title"] = "Service Request";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="../css/styles.css">
    <!-- <link rel="stylesheet" href="../../css/application-form.css"> -->
    <!-- <link rel="stylesheet" href="../../css/style.css"> -->
    <title>DBOS Support Centre</title>
    
</head>
<body>
    <header>
        <div id="hamburger-button" onclick="toggleNav()"><i id="hamburger-button" class="fas fa-bars"></i></div>
        <img src="../images/alliance.png" alt="Alliance Logo" class="header-logo">
        <div class="logo-name">ALLIANCE BANK</div>
        <div class="logo-stitle">DIGITAL BANKING ONE SYSTEM <span class="version-name">V 1.2.25</span></div>
        <div class="header-right">
            <div class="username">@ViewData["Username"]</div>
            <div class="logout-dropdown">
                <a href="#" id="logout-icon" class="logout-button" onclick="toggleLogout()"><i class="fa-regular fa-file-lines"></i></a>
                <div id="logout-dropdown-content" class="logout-dropdown-content">
                    <a href="/logout" class="logout-button" onclick="handleLogout()">Logout</a>
                </div>
            </div>
        </div>
    </header>
    <div id="mySidenav" class="sidenav">
        <a href="/home" class="sideBack">Contactless Banking</a>
        <a href="dbosuat.my" class="sideBack online" id="onlineLink">Online <i class="fas fa-wifi"></i></a>
        <div class="list-group">
            <a href="#" class="list-group-item offline"><i class="fas fa-times"></i> Offline</a>
            <a href="#" class="list-group-item active"><i class="fas fa-users"></i> Application Forms</a>
            <a href="/contactless/dashboard" class="list-group-item"><i class="fas fa-gear"></i> Dashboard</a>
        </div>
    </div>

    <div id="main">
        <div class="filterBar">
            <div class="title">
                <h2>Application Forms</h2>
            </div>
        </div>

        <div class="main-con">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Search">
                <div class="input-group-append">
                    <button class="btn btn-light" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </div>
                <div class="content-con">
                    <div class="menu-list">
                        <h4><b>Categories</b></h4>
                        <a href="#" class="menu-list-item">Wealth</a>
                        <a href="#" class="menu-list-item">BANCA Manulife</a>
                        <a href="#" class="menu-list-item">BTFC</a>
                        <a href="#" class="menu-list-item">Credit Card</a>
                        <a href="#" class="menu-list-item">Deposits</a>
                        <a href="#" class="menu-list-item">Mortgage</a>
                        <a href="#" class="menu-list-item">Personal Loan</a>
                        <a href="#" class="menu-list-item">RBIL</a>
                        <a href="#" class="menu-list-item active" >Service Request</a>
                        <a href="#" class="menu-list-item">Bundles</a>
                    </div>
                    <div class="forms-list">
                        <h4><b>Service Request</b></h4>
                        <div class="menu-cards-container">
                            <div class="menu-cards_item">
                                <div class="menu-card">
                                    <div class="menu-card_content">
                                        <img src="../images/contactless/Loan Icon.png" alt="Icon" class="menu-card_icon">
                                        <a href="/contactless/forms/contactdetails" target="_blank" class="menu-card_link">
                                            <h5 class="menu-card_title"><b>UPDATE CONTACT DETAILS</b></h5>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="menu-cards_item">
                                <div class="menu-card">
                                    <div class="menu-card_content">
                                        <img src="../images/contactless/Loan Icon.png" alt="Icon" class="menu-card_icon">
                                        <a href="#" target="_blank" class="menu-card_link">
                                            <h5 class="menu-card_title"><b>UPDATE EMPLOYMENT DETAILS</b></h5>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="menu-cards_item">
                                <div class="menu-card">
                                    <div class="menu-card_content">
                                        <img src="../images/contactless/Loan Icon.png" alt="Icon" class="menu-card_icon">
                                        <a href="#" target="_blank" class="menu-card_link">
                                            <h5 class="menu-card_title"><b>PB/AP UPDATE</b></h5>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/script.js"></script>
    @* <script src="../js/offline-alert.js"></script> *@
</body>
</html>