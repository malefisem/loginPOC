@page "/contactless/dashboard"
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/styles.css">
    <title>DBOS Support Centre</title>
</head>
<body>
    <header>
        <div id="hamburger-button" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" onclick="toggleNav()">
            <span class="navbar-toggler-icon"></span>
        </div>
        <img src="../images/alliance.png" alt="Alliance Logo" class="header-logo">
        <div class="logo-name">ALLIANCE BANK</div>
        <div class="logo-stitle">DIGITAL BANKING ONE SYSTEM <span class="version-name">V 1.2.25</span></div>
    </header>
    <div id="mySidenav" class="sidenav">
        <a href="/home" class="sideBack">Contactless Banking</a>
        <a href="dbosuat.my" class="sideBack online" id="onlineLink"><i class="fas fa-wifi"></i> Online</a>
        <div class="list-group">
            <a href="#" class="list-group-item offline"><i class="fas fa-times"></i> Offline</a>
            <a href="/contactless/menu" class="list-group-item"><i class="fas fa-users"></i> Application Forms</a>
            <a href="#" class="list-group-item active"><i class="fas fa-gear"></i> Dashboard</a>
        </div>
    </div>
    <div id="main">
        <div class="filterBar">
            <div class="title">
                <h2>Dashboard</h2>
            </div>
        </div>
        <div class="main-con">
            <div class="table-container">
                <table id="application-table" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Customer Name/Customer ID</th>
                            <th>Start Date</th>
                            <th>Form Category</th>
                            <th>Form Name</th>
                            <th>Status/Remark</th>
                            <th>Date & Time of Last Update</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="table-body">
                        <!-- Data will be populated here dynamically -->
                    </tbody>
                </table>
            </div>
            <button id="show-all-button" onclick="showAllData()" class="showALL">View All Applications <i class="fa fa-angle-double-down"></i></button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/script.js"></script>
    <script src="../js/offline-alert.js"></script>
    <script>
        $(document).ready(function() {
            $('#application-table').DataTable();
        });
    </script>
</body>
</html>